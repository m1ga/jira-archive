					},
					"body": "https://github.com/appcelerator/titanium_mobile_windows/pull/654",
					"updateAuthor": {
						"name": "kiguchi",
						"key": "kota",
						"displayName": "Kota Iguchi",
						"active": false,
						"timeZone": "America/Los_Angeles"
